#include <stdio.h>

void llamarFuncion();

int main() {
    for (int j = 0; j < 5; j++) {
        llamarFuncion();
    }
    return 0;  // Buenas prácticas
}

void llamarFuncion() {
    /* Solo la primera vez que se llame a esta función se inicializa numVeces */
    static int numVeces = 0;

    printf("Esta función se ha llamado %d veces.\n", ++numVeces);
}
